# Environment variables for Databricks Sword
# Copy this file to .env.local and fill in the values

# Database (Turso)
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# Auth.js v5
AUTH_SECRET=
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=
AUTH_TRUST_HOST=true

# Databricks PAT encryption
# 32-byte AES key for encrypting stored PAT tokens
# Generate with: openssl rand -hex 32
AES_ENCRYPTION_KEY=

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Admin Panel
# Password for accessing /admin to manage blog and FAQ content
ADMIN_PASSWORD=

# SMTP (for feedback form)
# Required for /feedback form to send emails
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
FEEDBACK_TO=

# Development options
# Set to true to bypass OAuth during local testing
# MOCK_AUTH=true
